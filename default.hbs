<!doctype html>
<html lang="en">
    <head>

        {{! Document settings and metadata }}
        <title>{{meta_title}}</title>
        <meta charset="utf-8" />
        <meta name="designer" content="Hayden Bleasel" />
        <meta name="rating" content="general" />
        <meta name="keywords" content="ghost, blog, {{meta_title}}" />

        {{! iOS, Android and Windows stuff }}
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="format-detection" content="telephone=yes" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="msapplication-TileImage" content="{{asset 'images/windows-tile.png'}}" />
        <meta name="msapplication-TileColor" content="#262A2D" />

        {{! Robots and Viewport }}
        <meta name="robots" content="index, follow" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

        {{! OpenGraph for Facebook }}
        <meta property="og:title" content="{{meta_title}}" />
        <meta property="og:locale" content="en_US" />

        {{! Twitter Card }}
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:title" content="{{meta_title}}" />

        {{! Icons }}
        <link rel="icon" href="{{asset 'favicon.ico'}}" />
        <link rel="icon" sizes="196x196" href="{{asset 'images/android-homescreen.png'}}" />
        <link rel="apple-touch-icon" href="{{asset 'images/apple-touch-icon.png'}}" />

        {{! Prerendering and Prefetching }}
        {{#if @blog.cover}}
            <link rel="prerender" href="{{@blog.cover}}" />
            <link rel="prefetch" href="{{@blog.cover}}" />
        {{/if}}
        <link rel="dns-prefetch" href="//fonts.googleapis.com/" />

        {{! Scripts and Stylesheets }}
        <link rel="stylesheet" href="{{asset 'css/highlight.css'}}" />
        <link rel="stylesheet" href="{{asset 'css/phantom.css'}}" />
        <link rel="stylesheet" href="//infinitely.io/assets/styles/__infinitely_.min.css" />
        <script src="{{asset 'js/html5shiv-printshiv.js'}}"></script>
        <script src="{{asset 'js/respond.js'}}"></script>
        <script src="//use.typekit.net/rhk3rvc.js"></script>
        <script>try{Typekit.load();}catch(e){}</script>

        {{! Page-Specific Metadata }}
        {{{block "meta"}}}

        {{ghost_head}}

    </head>
    <body class="{{body_class}} nav-visible">
        <div class="site site-wrapper">
            <header class="site site-header" component="header">
                <h1>Infinitely</h1>
                <a href="/" class="site site-logo">
                    Infinitely
                </a>
                <a href="http://develo.pe" class="site site-devstudio-logo site-studio-logo" target="_blank">
                    devstudio
                </a>
                <nav class="site-header-nav">
                    <h2>The Design &amp; Love</h2>
                    <ul>
                        <li>
                            <a href="/#about">about</a>
                        </li>
                        <li>
                            <a href="/#works">works</a>
                        </li>
                        <li>
                            <a href="/#contact">contact</a>
                        </li>
                        <li>
                            <a href="/blog">blog</a>
                        </li>
                        <li class="site clear"></li>
                    </ul>
                    <div class="site clear"></div>
                </nav>
                <div class="site clear"></div>
            </header>
            <div class="main">
                {{{body}}}
            </div>
            <footer class="site site-footer footer-container">
                &copy; 2015 <span class="site-name">INFINITELY</span>. All rights reserved.
            </footer>
        </div>

        {{ghost_foot}}

        {{! Deferred scripts }}
        <script src="{{asset 'js/fastclick.js'}}"></script>
        <script src="{{asset 'js/stellar.js'}}"></script>
        <script src="{{asset 'js/highlight.js'}}"></script>
        <script src="{{asset 'js/phantom.js'}}"></script>
        <script src="{{asset 'js/jquery.timeago.min.js'}}"></script>

        <script>jQuery(document).ready(function() { jQuery("time.timeago").timeago(); });</script>

    </body>
</html>
